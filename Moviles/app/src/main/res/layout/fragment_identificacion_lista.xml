<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="match_parent"
    tools:context=".IdentificacionLista">

    <!-- TODO: Update blank fragment layout -->
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:textAlignment="center"
        android:layout_marginTop="30dp"
        android:textColor="@color/gris"
        android:text="¿Cómo quieres identificar tu lista?" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        android:textAlignment="textStart"
        android:layout_marginTop="40dp"
        android:textColor="@color/gris"
        android:text="Escoge un icono"
        android:layout_marginLeft="50dp"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"

        android:layout_marginTop="20dp">
    <Button
        android:id="@+id/btn1"
        android:layout_width="50dp"
        android:layout_height="49dp"
        android:layout_marginRight="10dp"
        android:textAlignment="center"
        android:button="@android:color/transparent"
        android:background="@drawable/circulo"
        android:layout_marginLeft="90dp"

        android:layout_gravity="center"
        android:drawableBottom="@drawable/categoriap"
        android:textSize="20sp"
        android:textStyle="bold"/>

        <Button
            android:id="@+id/btn2"
            android:layout_width="50dp"
            android:layout_height="49dp"
            android:layout_marginRight="10dp"
            android:textAlignment="center"
            android:button="@android:color/transparent"
            android:background="@drawable/circulo"


            android:layout_gravity="center"
            android:drawableBottom="@drawable/categorialibros"
            android:textSize="20sp"
            android:textStyle="bold"/>

        <Button
            android:id="@+id/btn3"
            android:layout_width="50dp"
            android:layout_height="49dp"
            android:layout_marginRight="10dp"
            android:textAlignment="center"
            android:button="@android:color/transparent"
            android:background="@drawable/circulo"

            android:layout_gravity="center"
            android:drawableBottom="@drawable/categoriavideojuego"
            android:textSize="20sp"
            android:textStyle="bold"/>

        <Button
            android:id="@+id/btn4"
            android:layout_width="50dp"
            android:layout_height="49dp"
            android:layout_marginRight="10dp"
            android:textAlignment="center"
            android:button="@android:color/transparent"
            android:background="@drawable/circulo"
            android:layout_gravity="center"
            android:drawableBottom="@drawable/categoriaseries"
            android:textSize="20sp"
            android:textStyle="bold"/>

    </LinearLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        android:textAlignment="textStart"
        android:layout_marginTop="40dp"
        android:textColor="@color/gris"
        android:text="Elige un nombre para tu lista"
        android:layout_marginLeft="50dp"/>

    <EditText
        android:layout_width="300dp"
        android:layout_height="50dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="30dp"
        android:ems="10"
        android:textColorHint="@color/gris"
        android:hint="    Nombre de lista"
        android:background="@drawable/customedittext"
        android:shadowDx="100" android:shadowDy="100" android:shadowRadius="100"
        />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        android:textAlignment="textStart"
        android:layout_marginTop="20dp"
        android:textColor="@color/gris"
        android:text="¿Quieres que otros colaboren?"
        android:layout_marginLeft="50dp"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"

        android:layout_marginTop="30dp">
        <Button
            android:id="@+id/btnColaborar"
            android:layout_width="115dp"
            android:layout_height="49dp"
            android:layout_marginRight="10dp"
            android:textAlignment="center"
            android:button="@android:color/transparent"
            android:background="@drawable/cuadradoselecionado"
            android:layout_marginLeft="80dp"
            android:layout_gravity="center"
            android:hint="Colaborar"
            android:textColorHint="@color/gris"
            android:textSize="14sp"
            android:textStyle="bold"/>

        <Button
            android:id="@+id/btnsoloyo"
            android:layout_width="110dp"
            android:layout_height="49dp"
            android:layout_marginRight="10dp"
            android:textAlignment="center"
            android:button="@android:color/transparent"
            android:background="@drawable/cuadradoselecionado"
            android:layout_marginLeft="30dp"
            android:layout_gravity="center"
            android:hint="Solo yo"
            android:textColorHint="@color/gris"
            android:textSize="14sp"
            android:textStyle="bold"/>
    </LinearLayout>


</LinearLayout>