<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="80dp"
    android:background="@color/purpuraMenu"
    android:orientation="horizontal"
    tools:context=".menuInicio">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"

        android:layout_marginLeft="25dp"
        android:layout_gravity="center_horizontal">
        <ImageView

            android:id="@+id/iconoInicio"
            android:layout_width="30dp"
            android:layout_marginTop="16dp"
            android:layout_height="30dp"
            android:layout_gravity="center"
            android:src="@drawable/inicio"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="11sp"
            android:text="INICIO"
            android:textColor="@color/white"
            android:fontFamily="@font/intermedium"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginLeft="25dp"
        android:layout_gravity="center_horizontal">
        <ImageView
            android:id="@+id/iconoListas"
            android:layout_width="30dp"
            android:layout_marginTop="16dp"
            android:layout_height="30dp"
            android:layout_gravity="center"
            android:src="@drawable/lista"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="11sp"
            android:text="MIS LISTAS"
            android:textColor="@color/white"
            android:fontFamily="@font/intermedium"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginLeft="25dp"
        android:layout_gravity="center_horizontal">
        <Button
            android:id="@+id/nuevaLista"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:layout_marginTop="3dp"
            android:drawableLeft="@drawable/mas"
            android:drawablePadding="8dp"
            android:paddingLeft="27dp"
            android:paddingRight="75dp"
            android:background="@drawable/formatomenumas"/>

    </LinearLayout>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginLeft="25dp"
        android:layout_gravity="center_horizontal">
        <ImageView
            android:id="@+id/iconoBuscar"
            android:layout_width="30dp"
            android:layout_marginTop="16dp"
            android:layout_height="30dp"
            android:layout_gravity="center"
            android:src="@drawable/lupa"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="11sp"
            android:text="BUSCAR"
            android:textColor="@color/white"
            android:fontFamily="@font/intermedium"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginLeft="25dp"
        android:layout_gravity="center_horizontal">
        <ImageView
            android:layout_width="30dp"
            android:layout_marginTop="16dp"
            android:layout_height="30dp"
            android:src="@drawable/descubrir"
            android:layout_gravity="center|bottom"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="11sp"
            android:text="DESCUBRIR"
            android:textColor="@color/white"
            android:fontFamily="@font/intermedium"/>
    </LinearLayout>

</LinearLayout>